{
  "name": "dev-frostty-image-converter",
  "version": "1.0.0",
  "productName": "MuTools",
  "description": "Conversor profissional de imagens para Mu Online Season 18. Converte entre formatos OZT, OZJ, TGA, PNG e JPG com preservação total do canal alpha.",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron:build": "electron-builder",
    "remove-integrity": "node remove-asar-integrity.js",
    "remove-integrity:portable": "node remove-asar-integrity.js dist-electron/MuTools-1.0.0-portable.exe",
    "verificar-integridade": "node verificar-integridade-removida.js"
  },
  "keywords": [
    "mu-online",
    "image-converter",
    "ozt",
    "tga",
    "png"
  ],
  "author": {
    "name": "DEV Frostty",
    "email": "devfrostty@example.com"
  },
  "license": "MIT",
  "copyright": "Copyright © 2025 DEV Frostty",
  "dependencies": {
    "@electron/remote": "^2.1.3",
    "crypto-js": "^4.2.0",
    "jimp": "^0.22.12",
    "jpeg-js": "^0.4.4",
    "pako": "^2.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@types/pako": "^2.0.3",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8",
    "postcss": "^8.4.49",
    "rcedit": "^5.0.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "wait-on": "^8.0.2"
  },
  "build": {
    "appId": "com.devfrostty.mutools",
    "productName": "MuTools",
    "asar": true,
    "disableSanityCheckAsar": true,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "asInvoker"
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "menuCategory": "Utilitários",
      "shortcutName": "MuTools",
      "warningsAsErrors": false,
      "artifactName": "${productName} Setup ${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerLanguages": [
        "pt_BR"
      ],
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "deleteAppDataOnUninstall": false
    },
    "portable": {
      "artifactName": "${productName}-${version}-Portable-Otimizada.${ext}"
    }
  }
}
